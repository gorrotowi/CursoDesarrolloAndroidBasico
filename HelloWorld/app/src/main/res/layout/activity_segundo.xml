<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_segundo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sebastian.helloworld.SegundoActivity">

    <EditText
        android:id="@+id/edtxNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Escribe tu nombre"
        android:inputType="text" />

    <EditText
        android:id="@+id/edtxEdad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Escribe tu edad"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/edtxMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Escribe tu mail"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/edtxContrasena"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Escribe tu contraseÃ±a"
        android:inputType="textPassword" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="goViewSecond"
        android:text="Enviar datos" />

    <ToggleButton
        android:id="@+id/tglBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
